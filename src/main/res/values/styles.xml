<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <!--<item name="contentPaddingBottom">2dp</item>
        <item name="contentPaddingTop">2dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>-->
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="startEndTime">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="taskContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="pomodoroSettingsTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/pomodoro_settings_title</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="pomodoroSettingsProperty">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/pomodoro_settings_property</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
